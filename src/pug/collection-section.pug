section.collection-section
    .container.collection-section__container
        .filter-toggle
            h3.filter-toggle__title Фільтр
            
            button.button.button--outline.filter-toggle__button(type="button" aria-label="Hide Filter" data-filter-toggle)
                svg.button__icon(width="20" height="20p")
                    use(xlink:href="img/sprite.svg#filter")

        form.sort-form.collection-section__sort-form(id="sort-form" autocomplete="off" novalidate="novalidate")
            .sort-form__group
                select#selectSortBy.select(name="selectSortBy" aria-label="Sort by" required)
                    option(value="1") Сортувати за зростанням
                    option(value="2") Сортувати за спаданням

        table.collection-table
            thead.collection-table__thead
                tr
                    th Дата
                        .sort
                            button.sort__button(type="button" aria-label="Sort up")
                                svg.sort__icon(width="11" height="6")
                                    use(xlink:href="img/sprite.svg#sort-up-arrow")
                            
                            button.sort__button(type="button" aria-label="Sort up")
                                svg.sort__icon(width="11" height="6")
                                    use(xlink:href="img/sprite.svg#sort-down-arrow")

                    th Назва статті
                    th Опис
            
